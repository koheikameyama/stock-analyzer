{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd web && npm install && npx prisma generate --schema=../prisma/schema.prisma && npm run build",
    "watchPatterns": [
      "web/**",
      "prisma/**",
      "package.json",
      "railway.json"
    ]
  },
  "deploy": {
    "startCommand": "cd web && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
